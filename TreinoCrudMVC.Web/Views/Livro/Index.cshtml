@model IEnumerable<TreinoCrudMVC.Web.ViewModel.LivroViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Livro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditoraId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GeneroId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editora.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.LivroId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.LivroId }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.LivroId })
        </td>
    </tr>
}

</table>
